generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  events       Event[]

  @@map("users")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  location    String?
  slug        String   @unique
  shareLink   String   @unique
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos      Photo[]

  @@map("events")
}

model Photo {
  id           String   @id @default(cuid())
  eventId      String
  url          String
  thumbnailUrl String?
  displayUrl   String?
  blurDataUrl  String?
  width        Int?
  height       Int?
  uploadedAt   DateTime @default(now())
  
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("photos")
}
